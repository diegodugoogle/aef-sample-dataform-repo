config {
    hasOutput: true,
    description: "A table for storing locations",
    columns: {
        location_id: "Location ID as defined in the source system.",
        location_name: "The location name as defined in the source system."
    }
}

CREATE EXTERNAL TABLE
  `${dataform.projectConfig.vars.landing_dataset_project_id}.${dataform.projectConfig.vars.landing_dataset_dataset_id}.location` ( location_id STRING,
    location_name STRING )
WITH CONNECTION `${dataform.projectConfig.vars.connection_name}` OPTIONS( uris = ['gs://${dataform.projectConfig.vars.sample_data_bucket}/location/*'],
    max_staleness = INTERVAL 8 HOUR,
    metadata_cache_mode = 'AUTOMATIC',
    format = 'CSV' )